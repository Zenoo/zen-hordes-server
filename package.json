{
  "name": "zen-hordes-server",
  "version": "1.0.7",
  "type": "module",
  "description": "Server for the Zen Hordes browser extension",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "mh-api:generate": "sh scripts/generate-mh-api.sh",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node build/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "sh scripts/test-update.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:sync:dev": "prisma migrate dev && prisma generate",
    "db:sync:production": "prisma migrate deploy"
  },
  "keywords": [],
  "author": "Zenoo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenoo/zen-hordes-server.git"
  },
  "packageManager": "pnpm@10.12.4",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-cache": "^5.1.2",
    "pg": "^8.17.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/node-cache": "^4.2.5",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "swagger-typescript-api": "^13.2.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
